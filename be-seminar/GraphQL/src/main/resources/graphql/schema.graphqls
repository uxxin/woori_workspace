type Book {
    id: ID!
    title: String!
    author: String!
    reviews: [Review!]
}

type Review {
    id: ID!
    content: String!
    rating: Int!
    book: Book!
}

type Query {
    getBooks: [Book!]
    getBookById(id: ID!): Book
}

type Mutation {
    addBook(title: String!, author: String!): Book
    addReview(bookId: ID!, content: String!, rating: Int!): Review
}

type Subscription {
    reviewAdded(bookId: ID!): Review
}
